{
	/*https://typescript.p6p.net/typescript-tutorial/tsc.html*/
	"compilerOptions": {
		"rootDir": "src",
		"jsx": "preserve",
		"target": "ES2020",
		"useDefineForClassFields": true,
		"module": "ESNext",
		"lib": ["ES2020", "DOM", "DOM.Iterable"],
		"skipLibCheck": true,

		/* Bundler mode */
		"moduleResolution": "Bundler",
		"resolveJsonModule": true,
		"isolatedModules": true,
		//"noEmit": true,
		"allowJs": false,
		/* Linting */
		"strict": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"noFallthroughCasesInSwitch": true,
		"noImplicitAny": false,

		"outDir": "dist",
		"declarationDir": "dist/typings",
		"declaration": true,
		"baseUrl": "./",
		"paths": {
			"@/*": ["src/*"]
		}
	},
	"include": ["src"]
}
